<header class="page-header">
  <h2>查看加球机</h2>
</header>
<div class="row">
  <div class="col-md-12">
    <%= porto_flash %>
    <section class="panel">
      <header class="panel-heading">
        <h2 class="panel-title">加球机信息</h2>
      </header>
      <div class="panel-body">
        <%= form_tag nil, class: 'form-horizontal form-bordered' do %>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.model' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, te_machine_model(@machine.model), readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.serial_number' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, @machine.serial_number, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.manufactured_at' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, porto_date(@machine.manufactured_at), readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.remarks' %></label>
            <div class="col-sm-6">
              <%= text_area_tag nil, @machine.remarks, rows: 6, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <% unless @machine.stocked? %>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.club' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, @machine.club.name, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.bay' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, @machine.bay.name, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <% end %>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.out_of_stock' %></label>
            <div class="col-sm-2">
              <%= text_field_tag nil, porto_boolean(@machine.out_of_stock), readonly: true, class: 'form-control' %>
            </div>
            <label class="col-sm-2 control-label"><%= porto_arat 'machine.battery' %></label>
            <div class="col-sm-2">
              <%= text_field_tag nil, @machine.battery, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.last_pulsed_at' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, porto_date(@machine.last_pulsed_at), readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'machine.state' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, @machine.aasm.human_state, readonly: true, class: 'form-control' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to '返回', admin_machines_path, class: 'btn btn-default' %>&nbsp;
        <div class="btn-group dropup">
          <button type="button" class="mb-xs mt-xs btn btn-primary dropdown-toggle" data-toggle="dropdown">操作 <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to '编辑', edit_admin_machine_path(@machine) %></li>
            <li class="divider"></li>
            <li><%= link_to '查看心跳日志', pulse_log_admin_machine_path(@machine) %></li>
            <li><%= link_to '查看交易日志', report_log_admin_machine_path(@machine) %></li>
          </ul>
        </div>
      </div>
    </section>
  </div>
</div>
