<header class="page-header">
  <h2>编辑球场</h2>
</header>
<div class="row">
  <div class="col-md-12">
    <%= render "administration/commons/error_messages", target: @club %>
    <section class="panel">
      <header class="panel-heading">
        <h2 class="panel-title">球场信息</h2>
      </header>
      <div class="panel-body">
        <%= form_for [:admin, @club], html: { class: 'form-horizontal form-bordered' } do |f| %>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.name' %></label>
            <div class="col-sm-6">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.short_name' %></label>
            <div class="col-sm-6">
              <%= f.text_field :short_name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.position' %></label>
            <div class="col-sm-3">
              <div class="input-group">
                <span class="input-group-addon"><%= porto_arat 'club.longitude' %></span>
                <%= f.text_field :longitude, class: 'form-control' %>
              </div>
            </div>
            <div class="col-sm-3">
              <div class="input-group">
                <span class="input-group-addon"><%= porto_arat 'club.latitude' %></span>
                <%= f.text_field :latitude, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.address' %></label>
            <div class="col-sm-6">
              <%= f.text_field :address, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.phone_number' %></label>
            <div class="col-sm-6">
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.balls_per_bucket' %></label>
            <div class="col-sm-2">
              <div class="input-group">
                <%= f.text_field :balls_per_bucket, class: 'form-control' %>
                <span class="input-group-addon">粒</span>
              </div>
            </div>
            <label class="col-sm-2 control-label"><%= porto_arat 'club.minimum_charging_minutes' %></label>
            <div class="col-sm-2">
              <div class="input-group">
                <%= f.text_field :minimum_charging_minutes, class: 'form-control' %>
                <span class="input-group-addon">分钟</span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'club.unit_charging_minutes' %></label>
            <div class="col-sm-2">
              <div class="input-group">
                <%= f.text_field :unit_charging_minutes, class: 'form-control' %>
                <span class="input-group-addon">分钟</span>
              </div>
            </div>
            <label class="col-sm-2 control-label"><%= porto_arat 'club.maximum_discard_minutes' %></label>
            <div class="col-sm-2">
              <div class="input-group">
                <%= f.text_field :maximum_discard_minutes, class: 'form-control' %>
                <span class="input-group-addon">分钟</span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-center">
              <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
              <%= link_to '返回', [:admin, @club], class: 'btn btn-default' %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
