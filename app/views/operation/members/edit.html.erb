<header class="page-header">
  <h2>编辑会籍</h2>
</header>
<div class="row">
  <div class="col-md-12">
    <%= render "operation/commons/error_messages", target: @member %>
    <section class="panel">
      <header class="panel-heading">
        <h2 class="panel-title">会籍信息</h2>
      </header>
      <div class="panel-body">
        <%= form_for @member, html: { class: 'form-horizontal form-bordered' } do |f| %>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'member.card' %></label>
            <div class="col-sm-6">
              <%= text_field_tag nil, @member.card.name, readonly: true, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'member.number' %> <span class="required">*</span></label>
            <div class="col-sm-2">
              <%= f.text_field :number, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= porto_arat 'member.issued_at' %> <span class="required">*</span></label>
            <div class="col-sm-4">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </span>
              <%= f.text_field :issued_at, data: { 'plugin-datepicker' => true }, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-center">
              <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
              <%= link_to '返回', @member, class: 'btn btn-default' %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
